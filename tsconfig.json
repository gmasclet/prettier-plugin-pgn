{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "declaration": true,
    "incremental": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
